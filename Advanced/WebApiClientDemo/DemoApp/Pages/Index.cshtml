@page
@model DemoApp.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
    <head>
        <title>DemoApp - Client</title>
    </head>
    <body>
        <h1>Submit Rating</h1>
        <form method="POST">
            <p>
                <b>Name: </b>
                <input type="text" asp-for="Input.Name" required="required"/>
                <input type="submit" name="operation" value="Lookup"/>
            </p>
            <p>
                <b>Rank: </b>
                <input type="number" min="1" max="5" asp-for="Input.Rank" value="@Model.Input.Rank" />
                <input type="submit" name="operation" value="Submit"/>
            </p>
            <p>@Model.Output</p>
        </form>
        <p>
            <a href="ratings.html">View All Ratings</a>
        </p>
    </body>
</html>
