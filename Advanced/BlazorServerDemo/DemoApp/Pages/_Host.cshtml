@page "/"
@namespace DemoApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DemoApp</title>
</head>
<body>
	<h1 id="greetHeader">Welcome Visitor</h1>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <p id="footerOutput"></p>
    <script src="_framework/blazor.server.js"></script>
    <script>
		window._hostFunctions = {
			showGreeting: function(text) {
				document.getElementById('greetHeader').innerText = text;
			}
		};
	</script>
</body>
</html>
